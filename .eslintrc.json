{
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": ["standard", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "semi": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "curly": ["error", "all"],
    "prefer-const": "off",
    "space-before-function-paren": "off"
  }
}
